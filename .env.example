# Flask配置
FLASK_ENV=development
FLASK_APP=app.py
DEBUG=True

# 密钥配置
SECRET_KEY=your-super-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
ENCRYPTION_KEY=your-encryption-key-change-in-production

# 数据库配置
DATABASE_URL=sqlite:///fortune_prediction.db
# 生产环境使用PostgreSQL
# DATABASE_URL=postgresql://user:password@localhost:5432/fortune_prediction

# Redis配置
REDIS_URL=redis://localhost:6379/0

# Celery配置
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# 文件上传配置
UPLOAD_FOLDER=static/uploads
MAX_CONTENT_LENGTH=16777216
ALLOWED_EXTENSIONS=png,jpg,jpeg,gif,mp4,avi,mov

# SMTP邮件配置
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@fortune-prediction.com

# 第三方API密钥
OPENAI_API_KEY=your-openai-api-key
STRIPE_API_KEY=your-stripe-api-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# 云存储配置 (可选)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=your-bucket-name
AWS_REGION=us-east-1

# 监控配置
SENTRY_DSN=your-sentry-dsn
GOOGLE_ANALYTICS_ID=your-ga-id

# 社交登录 (可选)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=10

# 限流配置
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_DAY=10000

# 缓存配置
CACHE_TYPE=redis
CACHE_REDIS_URL=redis://localhost:6379/1
CACHE_DEFAULT_TIMEOUT=3600

# 安全配置
FORCE_HTTPS=False
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=3600

# 备份配置
BACKUP_DIR=backups
BACKUP_RETENTION_DAYS=7
AUTO_BACKUP_ENABLED=True

# 功能开关
FEATURE_EMAIL_VERIFICATION=True
FEATURE_TWO_FACTOR_AUTH=False
FEATURE_SOCIAL_LOGIN=False
FEATURE_PAYMENT=False
FEATURE_API_DOCS=True